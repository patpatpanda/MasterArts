        <label for="width" class="form-label-2" style="color:#fff">Width (cm): </label>
        <input type="text" id="width" name="width" class="form-input" asp-for="Width" />

        <label for="height" class="form-label-2" style="color:#fff">Height (cm): </label>
        <input type="text" id="height" name="height" class="form-input" asp-for="Height" />

        <label for="actualWeight" class="form-label-2" style="color:#fff">Actual weight (kg): </label>
        <input type="text" id="actualWeight" name="actualWeight" class="form-input-2" asp-for="ActualWeight" />

        <label for="pieces" class="form-label-2" style="color:#fff">Pieces: </label>
        <input type="text" id="pieces" name="pieces" class="form-input-2" asp-for="Pieces" />

        <label for="selectedDensity" class="form-label">Select Density:</label>
        <select id="selectedDensity" name="selectedDensity" class="form-select" asp-for="SelectedDensity">
