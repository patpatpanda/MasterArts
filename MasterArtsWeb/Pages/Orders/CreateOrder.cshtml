@page
@using MasterArtsLibrary.Models;
@model MasterArtsWeb.Pages.Orders.CreateOrderModel;

<!-- CreateOrderModel.cshtml -->
@if (TempData["SuccessMessage"] != null)
{

    <div class="alert alert-success fade-message text-center" id="success-message" style="margin-top: 10px">@TempData["SuccessMessage"]</div>
}


<body id="myView">

</body>






<form method="post" class="form">
    <div class="form-style-10">
        <div class="form-container">
            <label asp-for="Order.CustomerOrderNumber">Kundordernummer</label>
            <input asp-for="Order.CustomerOrderNumber" class="form-control" required />
            <span asp-validation-for="Order.CustomerOrderNumber" class="text-danger"></span>

            <label asp-for="Order.OrderReference">Orderreferens</label>
            <input asp-for="Order.OrderReference" class="form-control" />
            <span asp-validation-for="Order.OrderReference" class="text-danger"></span>

            <label asp-for="Order.Customer">Kund</label>
            <input asp-for="Order.Customer" class="form-control" />
            <span asp-validation-for="Order.Customer" class="text-danger"></span>

            <label asp-for="Order.FreightService">Frakttjänst</label>
            <select asp-for="Order.FreightService" class="form-control">
                <option value="">Välj frakttjänst</option>
                <option value="OceanFreight">Ocean Freight</option>
                <option value="Airfreight">Airfreight</option>
                <option value="ExpressKurir">Express Kurir</option>
                <option value="Road">Road</option>
                <option value="Trainfreight">Trainfreight</option>
                <option value="StandardKurir">Standard Kurir</option>
                <option value="Linehaul">Linehaul</option>
            </select>
            <span asp-validation-for="Order.FreightService" class="text-danger"></span>



            <label asp-for="Order.DeliveryTimeFrom">Lastdatum</label>
            <input asp-for="Order.DeliveryTimeFrom" type="datetime-local" class="form-control" />
            <span asp-validation-for="Order.DeliveryTimeFrom" class="text-danger"></span>

            <label asp-for="Order.DeliveryTimeTo">Lossningsdatum</label>
            <input asp-for="Order.DeliveryTimeTo" type="datetime-local" class="form-control" />
            <span asp-validation-for="Order.DeliveryTimeTo" class="text-danger"></span>



            <label>Lastningstid från</label>
            <select asp-for="Order.PickUpTimeFrom" class="form-control">
                <option value="08:00-15:00">08:00-15:00</option>
                <option value="09:00-16:00">09:00-16:00</option>

                <!-- Lägg till fler alternativ efter behov -->
            </select>

            <label>Lastningstid till</label>
            <select asp-for="Order.PickUpTimeTo" class="form-control">
                <option value="08:00-15:00">08:00-15:00</option>
                <option value="09:00-16:00">09:00-16:00</option>

                <!-- Lägg till fler alternativ efter behov -->
            </select>


        </div>

        <div class="form-container">
            <label asp-for="Order.Consignor.ConsignorName">Consignor Name</label>
            <input asp-for="Order.Consignor.ConsignorName" class="form-control" />
            <span asp-validation-for="Order.Consignor.ConsignorName" class="text-danger"></span>

            <label asp-for="Order.Consignor.ConsignorAddress1">Consignor Address 1</label>
            <input asp-for="Order.Consignor.ConsignorAddress1" class="form-control" />
            <span asp-validation-for="Order.Consignor.ConsignorAddress1" class="text-danger"></span>

            <label asp-for="Order.Consignor.ConsignorAddress2">Consignor Address 2</label>
            <input asp-for="Order.Consignor.ConsignorAddress2" class="form-control" />
            <span asp-validation-for="Order.Consignor.ConsignorAddress2" class="text-danger"></span>

            <label asp-for="Order.Consignor.ConsignorCity">Consignor City</label>
            <input asp-for="Order.Consignor.ConsignorCity" class="form-control" />
            <span asp-validation-for="Order.Consignor.ConsignorCity" class="text-danger"></span>

            <label asp-for="Order.Consignor.ConsignorCountry">Consignor Country</label>
            <input asp-for="Order.Consignor.ConsignorCountry" class="form-control" />
            <span asp-validation-for="Order.Consignor.ConsignorCountry" class="text-danger"></span>

            <label asp-for="Order.Consignor.ConsignorZip">Consignor Zip</label>
            <input asp-for="Order.Consignor.ConsignorZip" class="form-control" />
            <span asp-validation-for="Order.Consignor.ConsignorZip" class="text-danger"></span>

            <label asp-for="Order.Consignor.ConsignorContact">Consignor Contact</label>
            <input asp-for="Order.Consignor.ConsignorContact" class="form-control" />
            <span asp-validation-for="Order.Consignor.ConsignorContact" class="text-danger"></span>

            <label asp-for="Order.Consignor.ConsignorPhone">Consignor Phone</label>
            <input asp-for="Order.Consignor.ConsignorPhone" class="form-control" />
            <span asp-validation-for="Order.Consignor.ConsignorPhone" class="text-danger"></span>

            <label asp-for="Order.Consignor.ConsignorEmail">Consignor Email</label>
            <input asp-for="Order.Consignor.ConsignorEmail" class="form-control" />
            <span asp-validation-for="Order.Consignor.ConsignorEmail" class="text-danger"></span>
        </div>

        <div class="form-container">
            <label asp-for="Order.Consignee.ConsigneeName">Consignee Name</label>
            <input asp-for="Order.Consignee.ConsigneeName" class="form-control" />
            <span asp-validation-for="Order.Consignee.ConsigneeName" class="text-danger"></span>

            <label asp-for="Order.Consignee.ConsigneeAddress1">Consignee Address 1</label>
            <input asp-for="Order.Consignee.ConsigneeAddress1" class="form-control" />
            <span asp-validation-for="Order.Consignee.ConsigneeAddress1" class="text-danger"></span>

            <label asp-for="Order.Consignee.ConsigneeAddress2">Consignee Address 2</label>
            <input asp-for="Order.Consignee.ConsigneeAddress2" class="form-control" />
            <span asp-validation-for="Order.Consignee.ConsigneeAddress2" class="text-danger"></span>

            <label asp-for="Order.Consignee.ConsigneeCity">Consignee City</label>
            <input asp-for="Order.Consignee.ConsigneeCity" class="form-control" />
            <span asp-validation-for="Order.Consignee.ConsigneeCity" class="text-danger"></span>

            <label asp-for="Order.Consignee.ConsigneeCountry">Consignee Country</label>
            <input asp-for="Order.Consignee.ConsigneeCountry" class="form-control" />
            <span asp-validation-for="Order.Consignee.ConsigneeCountry" class="text-danger"></span>

            <label asp-for="Order.Consignee.ConsigneeZip">Consignee Zip</label>
            <input asp-for="Order.Consignee.ConsigneeZip" class="form-control" />
            <span asp-validation-for="Order.Consignee.ConsigneeZip" class="text-danger"></span>

            <label asp-for="Order.Consignee.ConsigneeContact">Consignee Contact</label>
            <input asp-for="Order.Consignee.ConsigneeContact" class="form-control" />
            <span asp-validation-for="Order.Consignee.ConsigneeContact" class="text-danger"></span>

            <label asp-for="Order.Consignee.ConsigneePhone">Consignee Phone</label>
            <input asp-for="Order.Consignee.ConsigneePhone" class="form-control" />
            <span asp-validation-for="Order.Consignee.ConsigneePhone" class="text-danger"></span>

            <label asp-for="Order.Consignee.ConsigneeEmail">Consignee Email</label>
            <input asp-for="Order.Consignee.ConsigneeEmail" class="form-control" />
            <span asp-validation-for="Order.Consignee.ConsigneeEmail" class="text-danger"></span>
        </div>

       

        <button type="submit" class="btn btn-primary">Create Order</button>
    </div>
</form>




<script>
    function toggleLanguage() {
        var toggleBtn = document.getElementById('languageToggleBtn');
        var contactForm = document.getElementById('contactForm');
        var contactFormSv = document.getElementById('contactFormSv');

        if (toggleBtn.innerText === 'Svenska') {
            toggleBtn.innerText = 'English';
            contactForm.style.display = 'none';
            contactFormSv.style.display = 'block';
        } else {
            toggleBtn.innerText = 'Svenska';
            contactForm.style.display = 'block';
            contactFormSv.style.display = 'none';
        }
    }


    setTimeout(function () {
        var successMessage = document.getElementById("success-message");
        successMessage.classList.remove("show");
    }, 5000);

    // Fade in the success message when the page is loaded
    window.addEventListener("load", function () {
        var successMessage = document.getElementById("success-message");
        successMessage.classList.add("show");
    });
    function checkHoneypot() {
        var honeypotField = document.getElementById("honeypot");
        if (honeypotField.value) {
            // Honeypot-fältet har fyllts i, antag att det är en robot
            alert("Form submission failed. Please try again.");
            return false;
        }
        return true;
    }

</script>