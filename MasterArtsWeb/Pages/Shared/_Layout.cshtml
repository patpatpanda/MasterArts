@using MasterArtsLibrary.ViewModels
@inject MasterArtsLibrary.Services.LanguageService LanguageService

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta tags, title, stylesheets, etc. -->
    <title>@ViewData["Title"] - ArtsWeb</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500&display=swap"
    <link rel="stylesheet" href="~/ArtsWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://kit.fontawesome.com/41c8b474e2.css" crossorigin="anonymous">

    <!-- Additional head content -->
    @RenderSection("Head", required: false)
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>

        <video autoplay muted loop>
            <source src="~/images/ARTS VID2.mp4" type="video/mp4">

            Your browser does not support the video tag.
        </video>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light navbar-dark mb-3" style="border: none;">
            <div class="mr-arts order-sm-first text-center" style="margin-left:12px">
                <div class="word">
                </div>


            </div>

            <div class="custom-container">
                <div class="ml-auto">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>

                <div class="navbar-collapse collapse justify-content-between" style="border-top: none; border-bottom: none;">




                    <ul class="navbar-nav order-first ms-auto" style="border-bottom:solid 3px white">


                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Index">
                                <p class="customer-text">
                                    @if (@Model.CurrentLanguage == "sv")
                                    {
                                    <p class="customer-text"> Hem </p>


                                    }
                                    else
                                    {
                                    <p class="customer-text"> Home </p>
                                    }

                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/ArtServices">
                                @if (@Model.CurrentLanguage == "sv")
                                {
                                    <p class="customer-text"> Tjänster </p>


                                }
                                else
                                {
                                    <p class="customer-text"> Services </p>
                                }
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/About">
                                @if (@Model.CurrentLanguage == "sv")
                                {
                                    <p class="customer-text"> Om Oss </p>


                                }
                                else
                                {
                                    <p class="customer-text"> About Us </p>
                                }
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Contact">
                                @if (@Model.CurrentLanguage == "sv")
                                {
                                    <p class="customer-text"> Kontakt </p>


                                }
                                else
                                {
                                    <p class="customer-text"> Contact </p>
                                }
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/LogisticsCenter/ShipmentCalculator">
                                @if (@Model.CurrentLanguage == "sv")
                                {
                                    <p class="customer-text"> Shipment</p>


                                }
                                else
                                {
                                    <p class="customer-text"> Shipment</p>
                                }
                            </a>
                        </li>





                        <li class="nav-item">
                            <a class="nav-link text-light" href="https://cissuite.cargoit.se/arts/portal/login">
                                <i class="fa-sharp fa-thin fa-lock"></i> <!-- Här är ikonen -->
                                <p class="customer-text">Login</p>
                            </a>
                        </li>
                    </ul>







                    <ul class="navbar-nav login">
                        <li class="nav-item">

                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="contact">

            <h2 style="font-size: 1em">CONTACT</h2>
        </div>
        <div class="services">
            <h2 style="font-size: 1em">SERVICES</h2>

        </div>
        <div class="about-2">
            <h2 style="font-size: 1em">ABOUT</h2>

        </div>



        @RenderSection("Navbar", required: false)
    </header>




    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <footer>




        <div class="fot">
            <div class="mr-arts-2"></div>

            <div class="fot-1">
                <p style="color:hotpink">
                    @if (@Model.CurrentLanguage == "sv")
                    {
                        <span>ARTS</span>
                    }
                    else
                    {
                        <span>ARTS</span>
                    }
                </p>
                <p>
                    <a href="/Index" class="kite">
                        @if (@Model.CurrentLanguage == "sv")
                        {
                            <span>Start</span>
                        }
                        else
                        {
                            <span>Home</span>
                        }
                    </a>
                </p>
                <p>
                    <a href="/About#sus" class="kite">
                        @if (@Model.CurrentLanguage == "sv")
                        {
                            <span>Hållbarhet</span>
                        }
                        else
                        {
                            <span>Sustainability</span>
                        }
                    </a>
                </p>
                <p>
                    <a href="/About" class="kite">
                        @if (@Model.CurrentLanguage == "sv")
                        {
                            <span>Om oss</span>
                        }
                        else
                        {
                            <span>About</span>
                        }
                    </a>
                </p>
                <p>
                    <a href="/ShipmentCalculator" class="kite">
                        @if (@Model.CurrentLanguage == "sv")
                        {
                            <span>Fraktkalkylator</span>
                        }
                        else
                        {
                            <span>Shipment Calculator</span>
                        }
                    </a>
                </p>
            </div>

            <div class="fot-1">
                <p style="color:hotpink">
                    @if (@Model.CurrentLanguage == "sv")
                    {
                        <span>Våra tjänster</span>
                    }
                    else
                    {
                        <span>Our services</span>
                    }
                </p>
                <p>
                    <a href="/ArtServices#air" class="kite">
                        @if (@Model.CurrentLanguage == "sv")
                        {
                            <span>Luft, väg</span>
                        }
                        else
                        {
                            <span>Air, road</span>
                        }
                    </a>
                </p>
                <p>
                    <a href="/ArtServices#sea" class="kite">
                        @if (@Model.CurrentLanguage == "sv")
                        {
                            <span>Sjö, tåg</span>
                        }
                        else
                        {
                            <span>Sea, train</span>
                        }
                    </a>
                </p>
                <p>
                    <a href="/ArtServices#courier" class="kite">
                        @if (@Model.CurrentLanguage == "sv")
                        {
                            <span>Bud, express</span>
                        }
                        else
                        {
                            <span>Courier, express</span>
                        }
                    </a>
                </p>
                <p>
                    <a href="/ArtServices#special" class="kite">
                        @if (@Model.CurrentLanguage == "sv")
                        {
                            <span>Anpassade tjänster</span>
                        }
                        else
                        {
                            <span>Customized services</span>
                        }
                    </a>
                </p>
            </div>

            <div class="fot-1">
                <p style="color:hotpink">
                    @if (@Model.CurrentLanguage == "sv")
                    {
                        <span>Kontakt</span>
                    }
                    else
                    {
                        <span>Contact</span>
                    }
                </p>
                <p>
                    <a href="/Contact" class="kite">
                        @if (@Model.CurrentLanguage == "sv")
                        {
                            <span>Kontakta oss</span>
                        }
                        else
                        {
                            <span>Contact us</span>
                        }
                    </a>
                </p>
                <p>
                    <a href="/ArtServices#sea" class="kite">
                        @if (@Model.CurrentLanguage == "sv")
                        {
                            <span>Facebook</span>
                        }
                        else
                        {
                            <span>Facebook</span>
                        }
                    </a>
                </p>
                <p>
                    <a href="/ArtServices#courier" class="kite">
                        @if (@Model.CurrentLanguage == "sv")
                        {
                            <span>Instagram</span>
                        }
                        else
                        {
                            <span>Instagram</span>
                        }
                    </a>
                </p>
                <p>
                    <a href="/ArtServices#special" class="kite">
                        @if (@Model.CurrentLanguage == "sv")
                        {
                            <span>LinkedIn</span>
                        }
                        else
                        {
                            <span>LinkedIn</span>
                        }
                    </a>
                </p>
            </div>

            <div class="fot-1">
                <p style="color:hotpink">
                    @if (@Model.CurrentLanguage == "sv")
                    {
                        <span>Annat</span>
                    }
                    else
                    {
                        <span>Other</span>
                    }
                </p>
                <p>
                    <a href="/About#nsab" class="kite">
                        @if (@Model.CurrentLanguage == "sv")
                        {
                            <span>Fraktvillkor</span>
                        }
                        else
                        {
                            <span>Shipping terms</span>
                        }
                    </a>
                </p>
            </div>
            <div class="fot-1">
                <p style="color:hotpink">
                    @if (@Model.CurrentLanguage == "sv")
                    {
                        <span>Du hittar oss här</span>
                    }
                    else
                    {
                        <span>You find us here</span>
                    }

                </p>
                <p class="kite">ARTS logistics</p>
                <p class="kite">Cylindervägen 12, Vån 9</p>
                <p class="kite">131 51 Nacka Strand</p>
                <p><i class="fa-solid fa-phone"></i>Telefon: +46 70-549 14 14</p>
            </div>


        </div>



    </footer>






    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
